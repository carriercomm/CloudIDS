<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <servlet>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>com.ayu.filter.Welcome</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/Welcome</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>XssFilter</filter-name>
    <filter-class>com.ayu.filter.XssFilter</filter-class>
  </filter>
  <filter>
    <filter-name>CheckFilter</filter-name>
    <filter-class>com.ayu.filter.CheckFilter</filter-class>
  </filter>
  <filter>
    <filter-name>DenialFilter</filter-name>
    <filter-class>com.ayu.filter.DenialFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XssFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DenialFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>